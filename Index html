<body>

    <div class="container">
        <img id="displayImg" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOHpueXNqZzZpbmZ4eG93NnZpbmZ4eG93NnZpbmZ4eG93NnZpbmZ4ZSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/cLS1cfxvGOPVpf9g3y/giphy.gif" alt="Cute bear">
        <h1 id="question">Will you be my Valentine? ðŸ’–</h1>
        
        <div class="buttons">
            <button id="yesBtn">Yes</button>
            <button id="noBtn">No</button>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const question = document.getElementById('question');
        const mainImg = document.getElementById('displayImg');

        let yesFontSize = 1.2; // Initial font size in rem

        const noMessages = [
            "Are you sure?",
            "Think again!",
            "Last chance...",
            "Surely not?",
            "You're breaking my heart!",
            "I'll be very sad...",
            "Very very sad...",
            "Please? ðŸ¥º"
        ];
        
        let messageIndex = 0;

        noBtn.addEventListener('click', () => {
            // 1. Make the "Yes" button bigger
            yesFontSize += 0.5;
            yesBtn.style.fontSize = `${yesFontSize}rem`;
            yesBtn.style.padding = `${yesFontSize * 10}px ${yesFontSize * 20}px`;

            // 2. Change the "No" button text
            noBtn.innerText = noMessages[messageIndex];
            messageIndex = (messageIndex + 1) % noMessages.length;
        });

        yesBtn.addEventListener('click', () => {
            question.innerText = "Yay! See you on the 14th! ðŸ¥°";
            mainImg.src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExbmZ4eG93NnZpbmZ4eG93NnZpbmZ4eG93NnZpbmZ4eG93NnZpbmZ4ZSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/G6N0pDDgBKWJpPShXp/giphy.gif"; // Success image
            noBtn.style.display = 'none'; // Hide the No button
        });
    </script>
